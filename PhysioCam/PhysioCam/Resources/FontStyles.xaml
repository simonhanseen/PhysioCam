<?xml version="1.0" encoding="utf-8"?>

<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    
    <x:Double x:Key="BodyTextSize">20</x:Double>
    <x:Double x:Key="HeaderTextSize">30</x:Double>
    <x:Double x:Key="InputFontSize">12</x:Double>
    
    <x:String x:Key="FontRegular">OpenSans-Regular</x:String>
    <x:String x:Key="FontBold">OpenSans-Bold</x:String>
    
    <Style x:Key="PageHeader" TargetType="Label">
        <Setter Property="FontSize" Value="{DynamicResource HeaderTextSize}" />
        <Setter Property="Padding" Value="40" />
        <Setter Property="TextColor" Value="{DynamicResource MainFontColor}" />
    </Style>
    
    
</ResourceDictionary>